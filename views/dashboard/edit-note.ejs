<body class="bg-gray-50">
  <div class="flex h-full overflow-hidden">
    <!-- Sidebar -->
    <%- include("./sidebar.ejs") %>

    <!-- Main Content -->
    <div class="flex-1 overflow-y-auto p-10">
      <!-- Note Edit Form -->
      <form
        class="note-edit-form"
        role="form"
        method="POST"
        action="/dashboard/edit/<%= noteID %>?_method=PUT"
      >
        <!-- Note Heading -->
        <input
          type="text"
          name="title"
          value="<%= note.title %>"
          class="text-2xl font-bold mb-2 w-full px-4 py-2 border-b focus:outline-none"
          placeholder="Note Title"
        />

        <!-- Note Body -->
        <textarea
          name="content"
          class="w-full h-96 px-4 py-2 border rounded-lg focus:outline-none"
          placeholder="Start writing your note here..."
        >
<%= note.content %></textarea
        >

        <!-- Save Button -->
        <button
          type="submit"
          class="mt-4 px-6 py-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg"
        >
          Save
        </button>
        <!-- Delete Button -->

        <button
          type="button"
          class="mt-4 ml-2 px-6 py-2 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-lg"
          onclick="document.getElementById('deleteModal').classList.remove('hidden');"
        >
          Delete
        </button>
      </form>
    </div>
  </div>
</body>

<!-- Delete Confirmation Modal -->
<div
  id="deleteModal"
  class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full"
>
  <div
    class="relative top-1/4 mx-auto p-5 border w-1/3 shadow-lg rounded-md bg-white"
  >
    <div class="mt-3 text-center">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Are you sure you want to delete this note?
      </h3>
      <div class="mt-5">
        <button
          type="button"
          class="bg-slate-200 hover:bg-slate-300 text-black font-bold py-2 px-4 mr-2 rounded"
          onclick="document.getElementById('deleteModal').classList.add('hidden');"
        >
          Cancel
        </button>
        <form
          class="inline-block"
          action="/dashboard/delete/<%= noteID %>?_method=DELETE"
          method="POST"
        >
          <button
            type="submit"
            class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
          >
            Delete
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
